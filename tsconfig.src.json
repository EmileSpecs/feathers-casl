{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "outDir": "src-dist",
      "moduleResolution": "node",
      "target": "es2018",
      "module": "commonjs",
      "downlevelIteration": true,
      "sourceMap": false,
      "declaration": true,
      "allowJs" : true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["test"]
  }
  